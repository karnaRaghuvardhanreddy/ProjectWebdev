<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label" >Username</label>
            <input id="username" name="username" class="form-control" required>
            <div class="invalid-feedback">Please enter valid title</div>
            <div class="valid-feedback">Title looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label" >Email</label>
            <input id="email" name="email" class="form-control" required type="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" >Password</label>
            <input id="password" name="password" class="form-control" required type="password">
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>